<%layout('layouts/boilerplate')%>
    <div id="clusterMap"></div>
    <h1 class="my-5">All Campgrounds</h1>
    <div id="campgroundWrapper">
        
    <% for( let campground of campgrounds.campgrounds) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-lg-4">
                    <% if (campground.images.length) { %>
                        <img src="<%=campground.images[0].url%>" alt="" class="img-fluid">
                        <% } else { %>
                            <img src="https://res.cloudinary.com/dsgvp2wmj/image/upload/v1621475259/YelpCamp/rjrdqgdthhhmsixwbmgs.jpg"
                                alt="" class="img-fluid">
                            <% } %>
                </div>
                <div class="col-lg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.location %>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View <%=campground.title%></a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
    </div>

    <nav aria-label="Campground pagination" class="d-flex justify-content-center py-4">
            <ul class="pagination">
                <% if (campgrounds.previous.page == null) { %>
                    <li class="page-item disabled">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                        </a>
                      </li>
                <% } else { %>
                    <li class="page-item">
                        <a class="page-link" href="/campgrounds?limit=<%=campgrounds.previous.limit%>&page=<%=campgrounds.previous.page%>" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                        </a>
                      </li>
                <% } %>


                <% let i = (Number(campgrounds.previous.page+1) > 5 ? Number(campgrounds.previous.page+1) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="disabled page-item"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(campgrounds.previous.page+1) + 4) && i <= campgrounds.pages; i++) { %>
                    <% if (i == campgrounds.previous.page+1) { %>
                        <li class="active page-item"><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li class="page-item"><a href="/campgrounds?limit=<%=campgrounds.previous.limit%>&page=<%= i %>" class="page-link"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(campgrounds.previous.page+1) + 4 && i < campgrounds.pages) { %>
                        <li class="disabled page-item"><a class="page-link">...</a></li>
                    <% } %>
                <% } %>

                <% if (campgrounds.next.page >= campgrounds.pages) { %>
                    <a class="page-link disabled" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                <% } else { %>
                    <li class="page-item">
                        <a href="/campgrounds?limit=<%=campgrounds.previous.limit%>&page=<%= campgrounds.next.page %>" class="page-link" aria-label="next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                <% } %>
            </ul>
</div>
      </nav>

